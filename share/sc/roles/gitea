valueOf_gitea_port() {
    echo 3000
}

valueOf_gitea_ssh_port() {
    echo 3022
}

valueOf_gitea_services() {
    cat <<EOF
giteassh:tcp:$(get_config "gitea.ssh.port"):10s:20s
gitea:http:$(get_config "gitea.port"):10s:20s
EOF
}

role_gitea_install() {
    svc_install gitea
    svc_config sshd "$(get_config gitea.ssh.port)"
    svc_enable sshd
    svc_start sshd
}

role_gitea_config() {
    svc_config gitea
}
# Local Variables:
# mode: sh
# End:
